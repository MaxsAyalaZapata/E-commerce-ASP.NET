@model List<CapaEntidad.DetalleVenta>
@{
    ViewBag.Title = "MisCompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row mt-5">
        <div class="col-sm-12">
            
            @{
                if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    { 
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body bg-light">
                                        <h6>ID TRANSACTION : @item.IdTrasaccion</h6>
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Imagen</th>
                                                        <th>Producto</th>
                                                        <th>Precio Unitario</th>
                                                        <th>Cantidad</th>
                                                        <th>Sub total</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="bg-white">
                                                    <tr>
                                                        <td>
                                                            <img class="card-img-top mb-5 mb-md-0" src="data:image/@item.oProducto3.Extensiion;base64,@item.oProducto3.Base64" style="width:120px; height:120px" />
                                                        </td>
                                                        <td valign="middle">
                                                            @item.oProducto3.Nombre
                                                        </td>
                                                        <td valign="middle">
                                                            $ @item.oProducto3.Precio USD
                                                        </td>
                                                        <td valign="middle">
                                                            @item.Cantidad
                                                        </td>
                                                        <td valign="middle">
                                                           $@item.Total
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }else
                {
                    <div class="row mb-3">
                        <div  class="col-sm-12 text-center">
                            <h1>
                                No se encontraron compras realizadas 
                            </h1>
                        </div>
                    </div>

                }
             }

        </div>
    </div>
</div>

